
# Utiliser npm comme gestionnaire de paquets par défaut
package-lock=true

# Éviter les conflits de paquets et les problèmes de compatibilité
legacy-peer-deps=true

# Optimisations pour de meilleures performances de build
network-timeout=60000

# Configuration de sécurité
audit=true
fund=false
ignore-scripts=false

# Forcer les vérifications de hachage pour les paquets téléchargés
verify-store-integrity=true
