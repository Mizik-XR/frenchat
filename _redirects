
# Redirection pour toutes les routes vers index.html (SPA)
/* /index.html 200

# Assurer que / et /home sont accessibles directement
/ /index.html 200 
/home /index.html 200

# Redirections avec paramètres d'URL importants
/?mode=cloud /index.html?mode=cloud 200
/?forceCloud=true /index.html?forceCloud=true 200
/?client=true /index.html?client=true 200
/?hideDebug=true /index.html?hideDebug=true 200

# Combinaisons fréquentes de paramètres
/?client=true&hideDebug=true /index.html?client=true&hideDebug=true 200
/?client=true&forceCloud=true /index.html?client=true&forceCloud=true 200
/?mode=cloud&client=true /index.html?mode=cloud&client=true 200
/?client=true&hideDebug=true&forceCloud=true /index.html?client=true&hideDebug=true&forceCloud=true 200
/?client=true&hideDebug=true&forceCloud=true&mode=cloud /index.html?client=true&hideDebug=true&forceCloud=true&mode=cloud 200

# Préservation des paramètres pour l'authentification
/auth/* /index.html 200
/home /index.html 200

# Redirection des API vers les fonctions Netlify
/api/* /.netlify/functions/:splat 200
